ConfigurationScreen:

<TabTextInput@TextInput>:
    multiline: False
    padding: [10, 10, 10, 10]

<ConfigurationScreen>:
    cozy_url: cozy_url
    cozy_password: cozy_password
    device_name: device_name
    local_mount_path: local_mount_path
    error_message: error_message
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 7
        row_default_height: 30
        cols: 2
        col_default_width: 300
        padding: 20
        spacing: 10
        Image:
            source: './icon/icon.png'
            height: 60
            size_hint_y: None
            allow_stretch: True
            keep_ratio: True
        Label:
            text: ''
            height: 500
            size_hint_x: None
        Label:
            text: ''
            height: 500
            size_hint_x: None
        ProgressBar:
            max: 100
            value: 0

        Label:
            text: "L'url de votre cozy"
            color: [0,0,0,0]
            markup: True
        TabTextInput:
            id: cozy_url
            focus: True
            hint_text: 'http(s)://yourcozy.domain.tld'
            input_type: 'url'
            next: cozy_password
            text: 'https://joseph-silvestre38.cozycloud.cc'
        Label:
            text: 'Le mot de passe de votre cozy'
            color: [0,0,0,0]
            markup: True
        TabTextInput:
            id: cozy_password
            password: True
            text: 'deadly02'

            next: device_name
        Label:
            text: 'Le nom de votre device'
            color: [0,0,0,0]
            markup: True
        TabTextInput:
            id: device_name
            next: local_mount_path
            text: 'osx'

        Label:
            text: 'Votre dossier local'
            color: [0,0,0,1]
            markup: True
        TabTextInput:
            id: local_mount_path
            text: '~/Cozy'

        Label:
            text: ''
            id: error_message
            color: [1,0,0,0]
            markup: True
        Button:
            text: 'Add'
            on_press: root.install()
